@model Agenda.Managers.Entidades.Contacto

@{
    ViewData["Title"] = "Crear Nuevo Contacto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-primary">Crear Nuevo Contacto</h2>

<form asp-action="Create" novalidate>
    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telefono" class="control-label"></label>
        <input asp-for="Telefono" class="form-control" placeholder="Ingresa el teléfono (máximo 15 dígitos)" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" placeholder="Ingresa el correo electrónico" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success btn-lg">Guardar Contacto</button>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Volver a la Lista</a>
    </div>
</form>
